@page
@model CAHFS_Emailer.Pages.EmailCreateModel
@{
    ViewData["Title"] = "Create Email";
}

<h1>Create Outgoing Email</h1>

<div class="row">
    <div class="col-md-8">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="OutgoingEmail.FolderNo" class="form-label"></label>
                <input asp-for="OutgoingEmail.FolderNo" class="form-control" />
                <span asp-validation-for="OutgoingEmail.FolderNo" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="OutgoingEmail.FromAddress" class="form-label"></label>
                <input asp-for="OutgoingEmail.FromAddress" class="form-control" />
                <span asp-validation-for="OutgoingEmail.FromAddress" class="text-danger"></span>
            </div>

            @*
            <div class="mb-3">
                <label asp-for="OutgoingEmail.ReplyToAddress" class="form-label"></label>
                <input asp-for="OutgoingEmail.ReplyToAddress" class="form-control" />
                <span asp-validation-for="OutgoingEmail.ReplyToAddress" class="text-danger"></span>
            </div>
            *@

            <div class="mb-3">
                <label asp-for="OutgoingEmail.ToAddresses" class="form-label"></label>
                <input asp-for="OutgoingEmail.ToAddresses" class="form-control" required />
                <span asp-validation-for="OutgoingEmail.ToAddresses" class="text-danger"></span>
                <small class="form-text text-muted">Separate multiple addresses with semicolons</small>
            </div>
            @*
            <div class="mb-3">
                <label asp-for="OutgoingEmail.CcAddresses" class="form-label"></label>
                <input asp-for="OutgoingEmail.CcAddresses" class="form-control" />
                <span asp-validation-for="OutgoingEmail.CcAddresses" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="OutgoingEmail.BccAddresses" class="form-label"></label>
                <input asp-for="OutgoingEmail.BccAddresses" class="form-control" />
                <span asp-validation-for="OutgoingEmail.BccAddresses" class="text-danger"></span>
            </div>
            *@

            <div class="mb-3">
                <label asp-for="OutgoingEmail.SubjectLine" class="form-label"></label>
                <input asp-for="OutgoingEmail.SubjectLine" class="form-control" />
                <span asp-validation-for="OutgoingEmail.SubjectLine" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="OutgoingEmail.BodyText" class="form-label"></label>
                <textarea asp-for="OutgoingEmail.BodyText" class="form-control" rows="8"></textarea>
                <span asp-validation-for="OutgoingEmail.BodyText" class="text-danger"></span>
            </div>

            @*
            <div class="mb-3">
                <label asp-for="OutgoingEmail.AttachmentList" class="form-label">Attachment StarDOC ID</label>
                <input asp-for="OutgoingEmail.AttachmentList" class="form-control" />
                <span asp-validation-for="OutgoingEmail.AttachmentList" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Attachment" class="form-label">Attachment:</label>
                <input asp-for="Attachment" class="form-control" type="file" />
            </div>

            <div class="mb-3">
                <label asp-for="OutgoingEmail.BodyHtml" class="form-label"></label>
                <textarea asp-for="OutgoingEmail.BodyHtml" class="form-control" rows="8"></textarea>
                <span asp-validation-for="OutgoingEmail.BodyHtml" class="text-danger"></span>
            </div>

            

            <div class="mb-3">
                <label asp-for="OutgoingEmail.AttachmentCount" class="form-label"></label>
                <input asp-for="OutgoingEmail.AttachmentCount" type="number" class="form-control" />
                <span asp-validation-for="OutgoingEmail.AttachmentCount" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="OutgoingEmail.Importance" class="form-label"></label>
                    <select asp-for="OutgoingEmail.Importance" class="form-select">
                        <option value="">Normal</option>
                        <option value="High">High</option>
                        <option value="Low">Low</option>
                    </select>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="OutgoingEmail.Sensitivity" class="form-label"></label>
                    <select asp-for="OutgoingEmail.Sensitivity" class="form-select">
                        <option value="">Normal</option>
                        <option value="Personal">Personal</option>
                        <option value="Private">Private</option>
                        <option value="Confidential">Confidential</option>
                    </select>
                </div>
            </div>

            <div class="mb-3 form-check">
                <input asp-for="OutgoingEmail.RequestReadReceipt" class="form-check-input" type="checkbox" />
                <label asp-for="OutgoingEmail.RequestReadReceipt" class="form-check-label"></label>
            </div>

            <div class="mb-3 form-check">
                <input asp-for="OutgoingEmail.RequestDeliveryReceipt" class="form-check-input" type="checkbox" />
                <label asp-for="OutgoingEmail.RequestDeliveryReceipt" class="form-check-label"></label>
            </div>
            *@

            <div class="mb-3">
                <label asp-for="OutgoingEmail.Status" class="form-label"></label>
                <select asp-for="OutgoingEmail.Status" class="form-select" required>
                    <option value="PENDING">Pending</option>
                    <option value="INPROCESS">In Process</option>
                    <option value="SENT">Sent</option>
                    <option value="ERROR">Error</option>
                </select>
                <span asp-validation-for="OutgoingEmail.Status" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <button type="submit" class="btn btn-primary">Create</button>
                <a asp-page="Emails" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}